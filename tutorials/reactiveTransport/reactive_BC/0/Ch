FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      Ch;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 0 0 1 0 0];

internalField   uniform 0;

boundaryField
{

    inlet
    {
        type            fixedValue;
        value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }  
    
    "top|bottom"
    {
        type            symmetryPlane;
    }

    obstacle
    {
        type            surfaceReaction;
        value           $internalField
    }

    defaultFaces
    {
        type            empty;
    }

}

// ************************************************************************* //
